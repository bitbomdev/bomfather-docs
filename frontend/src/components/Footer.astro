---
 // Footer component for site footer
---

<footer class="bg-background text-white py-6">
  <!-- Full-width divider line -->
  <div class="w-full border-t border-white/20 mb-6"></div>
  
  <div class="max-w-6xl mx-auto px-4">
    <!-- Quote and copyright -->
    <div class="flex flex-col md:flex-row justify-between items-start mb-4">
      <!-- Quote section with blue vertical line -->
      <blockquote class="border-l-4 border-[#006FEE] pl-4">
        <p class="italic text-lg">"I am going to give him security he can't refuse"</p>
        <p class="font-semibold mt-2">—The Bomfather</p>
      </blockquote>
      
      <!-- Copyright -->
      <div class="text-sm opacity-70 mt-8 md:mt-0">
        <p>© 2025 Bomfather. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer> 